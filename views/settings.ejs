                                                <input type="password" parsley-type="password" id="newpassconf" name="newpassconf" class="form-control form-control-sm" placeholder="Confirm Your Password" required>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="offset-sm-10 col-sm-2">
                                                <button type="reset"
                                                        class="btn btn-secondary waves-effect waves-light">
